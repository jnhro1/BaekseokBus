<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <solid android:color="#4374D9"/>
            <solid android:color="#FFFFFF" />

            <!-- 테두리 내부 여백 설정 -->
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="1dp"
                android:color="#4051ff" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <solid android:color="#FFFFFF" />

            <!-- 테두리 내부 여백 설정 -->
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="3dp"
                android:color="#4374D9" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="6dp"/>
            <solid android:color="#4374D9"/>
            <solid android:color="#FFFFFF" />

            <!-- 테두리 내부 여백 설정 -->
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp" />

            <!-- 테두리 설정: 두께, 색상 -->
            <stroke
                android:width="3dp"
                android:color="#4374D9" />
        </shape>
    </item>
</selector>


