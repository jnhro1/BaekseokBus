<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="40dp"
    android:background="#EAEAEA"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="반갑습니다."
        android:textColor="#3d3d3d"

        android:textSize="20dp"
        android:layout_marginTop="80dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="백석대학교 셔틀버스 예매 서비스입니다"
        android:textColor="#3d3d3d"
        android:layout_marginBottom="70dp"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="회원 유형을 선택해주세요"
        android:textStyle="bold"
        android:textColor="#4374D9"
        android:layout_marginBottom="70dp"
        android:textSize="30dp"
        />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10"
        >
        <LinearLayout
            android:id="@+id/LinearLayout_no"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_student"
            android:clickable="true"
            >
            <TextView
                android:id="@+id/studentText"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:textColor="#4374D9"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="학생"
                android:textStyle="bold"
                android:textSize="30dp"
                android:stateListAnimator="@null"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayout_yes"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/btn_admin"
            android:clickable="true"
            android:layout_marginLeft="20dp"
            >
            <TextView
                android:id="@+id/driverText"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:textColor="#ffffff"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:text="기사"
                android:textSize="30sp"
                android:stateListAnimator="@null"
                />
        </LinearLayout>

    </LinearLayout>




</LinearLayout>
