<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="#EAEAEA"
    >

    <Button
        android:id="@+id/btnReservation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#4374D9"
        android:layout_gravity="center"
        android:text="셔틀버스 예매"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        />
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#90C3FF"
        android:layout_gravity="center"
        android:text="예매 확인"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        />
    <Button
        android:id="@+id/btnNotice"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#6799FF"
        android:layout_gravity="center"
        android:text="공지사항"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        />
    <Button
        android:id="@+id/btnComplain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#4374D9"
        android:layout_gravity="center"
        android:text="불편사항 신고"
        android:textSize="40dp"
        android:textColor="#FFFFFF"
        />
    <Button
        android:id="@+id/btnMypage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#D9E5FF"
        android:layout_gravity="center"
        android:text="마이페이지"
        android:textSize="40dp"
        />


</LinearLayout>